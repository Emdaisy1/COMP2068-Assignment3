<% include ../partials/header.ejs %>

<main class="container">
    <h1><%= title %></h1>
       <div class="jumbotron">
        <form method="post">
            <fieldset class="form-group">
                <label for="name">Name: *</label>
                <input name="name" type="text" class="form-control" required value="<%= contact.name %>" autofocus />
            </fieldset>
            <fieldset class="form-group">
                <label for="email">Email: *</label>
                <input name="email" type="email" class="form-control" required value="<%= contact.email %>"/>
            </fieldset>
			<fieldset class="form-group">
                <label for="phone">Phone Number: *</label>
                <input name="phone" type="text" class="form-control" required value="<%= contact.phone %>"/>
            </fieldset>
            <fieldset class="form-group text-right">
                <button type="submit" class="btn btn-primary" title="Update">Update</button>
                <a href="/businessContacts/delete/<%= contact._id %> %>" title="Delete" 
				onclick="return confirm('Are you sure you want to delete this?');" class="btn btn-danger">Delete</a>
                <a href="/businessContacts" title="Cancel"  class="btn btn-default">Cancel</a>
            </fieldset>
        </form>
    </div>

</main>

<% include ../partials/footer.ejs %>